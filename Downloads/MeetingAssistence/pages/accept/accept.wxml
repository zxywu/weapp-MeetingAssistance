<!--pages/accept/accept.wxml-->
<view class="section">
  <view class="page-section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">会面日期</view>
          </view>
          <view class="weui-cell__bd">
              <view class="weui-input">{{date}}</view>
          </view>
        </view>
      </view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">会面时间</view>
          </view>
          <view class="weui-cell__bd">
              <view class="weui-input">{{time}}</view>
          </view>
        </view>
      </view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">地点</view>
          </view>
          <view class="weui-cell__bd">
              <view class="weui-input">{{location}}</view>
          </view>
        </view>
      </view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">会面内容</view>
          </view>
          <view class="weui-cell__bd">
              <view class="weui-input">{{message}}</view>
          </view>
        </view>
      </view>
  </view>
</view>

<view bindtap="showlocation">
  <button type="default">查看地点</button>
</view>

<view bindtap="accept">
  <button type="primary">接收</button>
</view>
<view bindtap="reject">
  <button type="warn">拒绝</button>
</view>

